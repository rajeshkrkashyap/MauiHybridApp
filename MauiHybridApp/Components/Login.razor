@page "/"
@inherits PublicBase

@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations

<div class="text-center">
            <MudPaper Class="pa-4 pt-5" Elevation="3">
                <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
                    <MudTextField T="string" Label="Mobile Number" Required="true" RequiredError="Mobile number is required!" />
                </MudForm>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true" OnClick="@(()=>form.Validate())" Style="margin-top:10px">Next>></MudButton>
            </MudPaper>

</div>

@code {
    bool success;
    string[] errors = { };
    MudForm form;
}
